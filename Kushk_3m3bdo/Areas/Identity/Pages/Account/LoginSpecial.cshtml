@page
@model LoginSpecialModel
@{
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class=" ">

	<section class="vh-100" style="background-color: #9A616D;">
		<div class="container h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col col-xl-10">
					<div class="card bg-dark-subtle shadow-lg" style="border-radius: 1rem;">
						<div class="row g-0">
							<div class="col-md-6 col-lg-5 d-none d-md-block">
								<img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
								     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
							</div>
							<div class="col-md-6 col-lg-7 d-flex align-items-center">
								<div class="card-body p-4 p-lg-5 text-black">

									<form id="account" method="post">

										<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

										<div class="d-flex align-items-center mb-3 pb-1">
											<i class="bi bi-boxes me-3 h1" style="color: #ff6219;"></i>
											<span class="h1 fw-bold mb-0">Kushk 3m 3bdo</span>
										</div>

										<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

										<div data-mdb-input-init class="form-floating mb-4">
											<input asp-for="Input.Email" aria-required="true" autocomplete="username" class="form-control form-control-lg" placeholder="" />
											<label asp-for="Input.Email" class="form-label">UserName or Email</label>
											<span asp-validation-for="Input.Email" class="text-danger"></span>
										</div>

										<div data-mdb-input-init class="form-floating mb-4">
											<input asp-for="Input.Password" aria-required="true" autocomplete="password" class="form-control form-control-lg" placeholder="" />
											<label asp-for="Input.Password" class="form-label">Password</label>
											<span asp-validation-for="Input.Password" class="text-danger"></span>
										</div>

										<div class="checkbox mb-3">
											<label asp-for="Input.RememberMe" class="form-label">
												<input class="form-check-input" asp-for="Input.RememberMe" />
												@Html.DisplayNameFor(m => m.Input.RememberMe)
											</label>
										</div>

										<div class="pt-1 mb-4 d-grid">
											<button id="login-submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg" type="submit">Login</button>
										</div>

										<p class="pb-lg-2" style="color: #393f81;">
											Don't have an account?
											<a asp-page="./RegisterSpecial" asp-route-returnUrl="@Model.ReturnUrl" style="color: #393f81;" class="text-decoration-none">
												<b> Register here </b>
											</a>
										</p>
									
										<a id="forgot-password" class="small text-muted text-decoration-none" asp-page="./ForgotPassword">Forgot password?</a>

										<p>
											<a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="small text-muted text-decoration-none">Resend email confirmation</a>
										</p>

										<a asp-controller="Home" asp-action="Privacy" class="small text-muted text-decoration-none custom-link">Terms of use.</a>
										<a asp-controller ="Home" asp-action="Privacy" class="small text-muted text-decoration-none custom-link">Privacy policy</a>

									</form>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

<style>
	.custom-link {
		color: #6c757d; /* Bootstrap muted color */
		text-decoration: none;
		transition: color 0.3s ease-in-out;
	}

	.custom-link:hover {
		color: #007bff; /* Bootstrap's primary link color */
	}
</style>