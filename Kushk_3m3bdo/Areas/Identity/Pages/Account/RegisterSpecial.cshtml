@page
@model Kushk_3m3bdo.Areas.Identity.Pages.Account.RegisterSpecialModel
@{
}

<!-- Section: Design Block -->
<section class="background-radial-gradient overflow-hidden">

	<div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
		<div class="row gx-lg-5 align-items-center mb-5">
			<div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
				<h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
					The best offer <br />
					<span style="color: hsl(218, 81%, 75%)">for your Life</span>
				</h1>
				<p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
					Our grocery ecommerce mobile application is a customer favorite,
					ensuring your customers not only shop effortlessly,
					but also love every moment of it.
				</p>
				<p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
					With Love
					<i class="bi bi-heart"></i>
					3m 3bdo
				</p>
			</div>

			<div class="col-lg-6 mb-5 mb-lg-0 position-relative">
				<div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
				<div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

				<div class="card bg-glass">
					<div class="card-body px-4 py-5 px-md-5">
						<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">

							<div asp-validation-summary="All" class="text-danger"></div>

							<!-- 2 column grid layout with text inputs for the first and last names -->
							<div class="row">
								<div class="col-md-6 mb-3">
									<div class="form-floating">
										<input asp-for="Input.FirstName" type="text" class="form-control" aria-required="true" placeholder="" />
										<label asp-for="Input.FirstName" class="form-label">First name</label>
										<span asp-validation-for="Input.FirstName" class="text-danger"></span>
									</div>
								</div>
								<div class="col-md-6 mb-3">
									<div class="form-floating">
										<input asp-for="Input.LastName" type="text" class="form-control" aria-required="true" placeholder="" />
										<label asp-for="Input.LastName" class="form-label">Last name</label>
										<span asp-validation-for="Input.LastName" class="text-danger"></span>
									</div>
								</div>
							</div>

							<!-- UserName input -->
							<div class="form-floating mb-2">
								<input asp-for="Input.UserName" type="text" class="form-control" aria-required="true" placeholder="" />
								<label asp-for="Input.UserName" class="form-label">User Name</label>
								<span asp-validation-for="Input.UserName" class="text-danger"></span>
							</div>


							<!-- Email input -->
							<div class="form-floating mb-2">
								<input asp-for="Input.Email" type="email" id="form3Example3" class="form-control" aria-required="true" placeholder="" />
								<label asp-for="Input.Email" class="form-label">Email address</label>
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>

							<!-- Password input -->
							<div class="form-floating mb-2">
								<input asp-for="Input.Password" type="password" class="form-control" aria-required="true" placeholder="" />
								<label asp-for="Input.Password" class="form-label">Password</label>
								<span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>

							<div class="form-floating mb-2">
								<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
								<label asp-for="Input.ConfirmPassword">Confirm Password</label>
								<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
							</div>

							<!-- 2 column grid layout with text inputs for the City and State -->
							<div class="row">
								<div class="col-md-6 mb-3">
									<div class="form-floating">
										<input asp-for="Input.City" type="text" class="form-control" placeholder="" />
										<label asp-for="Input.City" class="form-label">City</label>
										<span asp-validation-for="Input.FirstName" class="text-danger"></span>
									</div>
								</div>
								<div class="col-md-6 mb-3">
									<div class="form-floating">
										<input asp-for="Input.State" type="text" class="form-control" placeholder="" />
										<label asp-for="Input.State" class="form-label">State</label>
										<span asp-validation-for="Input.State" class="text-danger"></span>
									</div>
								</div>
							</div>

							<!-- Checkbox -->
							<div class="form-check d-flex justify-content-center mb-4">
								<input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" required />
								<label class="form-check-label" for="form2Example3g">
									I agree all statements in
									<a asp-controller="Home" asp-action="Privacy" class="text-body">
										<u>Terms of service</u>
									</a>
								</label>
							</div>

							<!-- Submit button -->
							<div class="d-grid mb-3">
								<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
									Sign up
								</button>
							</div>
							
							<!-- Log in-->
							<p class="pb-2 mb-1" style="color: #393f81;">
								Don't have an account?
								<a asp-page="./LoginSpecial" asp-route-returnUrl="@Model.ReturnUrl" style="color: #393f81;" class="text-decoration-none">
									<b> Sign In </b>
								</a>
							</p>

							<!-- Register buttons -->
							<div class="text-center">
								<p class="mb-1">or sign up with:</p>

								<button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
									<i class="fab fa-google"></i>
								</button>

								<button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
									<i class="fab fa-microsoft"></i>
								</button>

							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Section: Design Block -->

<style>
	.background-radial-gradient {
		background-color: hsl(218, 41%, 15%);
		background-image: radial-gradient(650px circle at 0% 0%, hsl(218, 41%, 35%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%), radial-gradient(1250px circle at 100% 100%, hsl(218, 41%, 45%) 15%, hsl(218, 41%, 30%) 35%, hsl(218, 41%, 20%) 75%, hsl(218, 41%, 19%) 80%, transparent 100%);
	}

	#radius-shape-1 {
		height: 220px;
		width: 220px;
		top: -60px;
		left: -130px;
		background: radial-gradient(#44006b, #ad1fff);
		overflow: hidden;
	}

	#radius-shape-2 {
		border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
		bottom: -60px;
		right: -110px;
		width: 300px;
		height: 300px;
		background: radial-gradient(#44006b, #ad1fff);
		overflow: hidden;
	}

	.bg-glass {
		background-color: hsla(0, 0%, 100%, 0.9) !important;
		backdrop-filter: saturate(200%) blur(25px);
	}
</style>